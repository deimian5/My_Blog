<!--Inicio container-->
<!-- Page Header -->
    <!-- Set your background image for this header on the line below. -->
    <header class="intro-header" style="background-image: url('/images/post-bg.jpg')">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <div class="post-heading">
                      <h1>Lista de Articulos</h1>                     
                    </div>
                </div>
            </div>
        </div>
    </header>

<div class="container">
  
  <%= link_to 'Nuevo Articulo', new_article_path, :class=>"btn btn-info"%>
  <br>
  <br>
  <br>
  <!--Inicio Panel-->
  <div class="panel panel-default">
    <div class="panel-heading">Lista de articulos</div>
    <!--Inicio Tabla-->
    <table class="table">
      <thead>
        <tr>
          <th>Titulo</th>
          <th>Contenido</th>
          <th colspan="3">Acciones</th>
        </tr>
      </thead>
      <tbody>
    <% @articles.each do |article| %>
        <tr>
          <td><%= article.title %></td>
          <td><%= truncate(article.text, length: 100) %></td>
          <td><%= link_to 'Ver', article_path(article), :class=>"btn btn-info" %></td>
          <td><%= link_to 'Editar', edit_article_path(article), :class=>"btn btn-warning" %></td>
          <td><%= link_to 'Eliminar', article_path(article),
              method: :delete, :class=>"btn btn-danger", data: { confirm: 'Are you sure?' }%></td>
        </tr>
      </tbody>
    <% end %>
    </table>
    <!--Fin Tabla-->
  </div>
  <!--Fin Panel-->
</div>
<!--Fin container-->